<form action="/records" method="POST">
  <div class="d-flex justify-content-center mt-5">
    <div class="col-3 mt-3  text-center">
      <h3>請輸入你的支出</h3>
      <p style="color:red" class="mb-0">*必填欄位</p>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <div class="col-3 mt-3">
      <label for="name" class="form-label w-2 p-2 text-center">名稱<span style="color: red;">*</span>：</label>
      <input type="text" class="form-control" id="name" aria-describedby="name" placeholder="名稱" name="name" size="4"
        required>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <div class="col-3 mt-3">
      <label for="date" class="form-label w-2 p-2 text-center">日期<span style="color: red;">*</span>：</label>
      <input type="date" class="form-control p-2 flex-grow-1" id="date" aria-describedby="date" placeholder="date"
        name="date" required>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <div class="col-3 mt-3">
      <label for="date" class="form-label w-2 p-2 text-center">類別<span style="color: red;">*</span>：</label>
      <select class="form-select" id="category" name="categoryId">
        <option disabled selected>類別*</option>
        <option value="1">家居物業</option>
        <option value="2">交通出行</option>
        <option value="3">休閒娛樂</option>
        <option value="4">餐飲食品</option>
        <option value="5">其他</option>
      </select>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <div class="col-3 mt-3">
      <label for="amount" class="form-label w-2 p-2 text-center">金額<span style="color: red;">*</span>：</label>
      <input type="number" min="0" class="form-control p-2 flex-grow-1" id="amount" aria-describedby="amount"
        placeholder="金額" name="amount" required>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-5">
    <button type="submit" class="btn btn-warning">新增支出</button>
  </div>
  <div class="col-auto m-4 d-flex justify-content-center">
    <a class="btn btn-outline-secondary" href="/">返回</a>
  </div>
</form>